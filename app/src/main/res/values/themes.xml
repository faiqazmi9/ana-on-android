<resources>

    <!-- Base application theme -->
    <style name="Theme.AnaAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="launchScreen" parent="Theme.AnaAndroid">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/app_launch</item>
    </style>

    <!-- Button style -->
    <style name="AnaButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AnaButton.Green" parent="AnaButton">
        <item name="android:background">@drawable/rounded_green_corner</item>
    </style>

    <style name="AnaButton.Black" parent="AnaButton">
        <item name="android:background">@drawable/rounded_black_corner</item>
    </style>

    <style name="AnaButton.GreenStroke" parent="AnaButton">
        <item name="android:background">@drawable/rounded_green_stroke_corner</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Text style -->
    <style name="AnaText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ubuntu_light_xml</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AnaText.Body1" parent="AnaText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AnaText.Body2" parent="AnaText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AnaText.Footer" parent="AnaText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AnaText.Title" parent="AnaText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnaText.Subtitle" parent="AnaText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EditTextBaseStyle" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_light_xml</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>